{
  "manifest_version": 3,
  "name": "PrivacyAIShield",
  "version": "1.1",
  "description": "Bloquea el envío de información sensible en ChatGPT, Gemini, DeepSeek y otros chatbots",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.deepseek.com/*",
    "https://chat.deepseek.com/*",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://grok.com/*",
    "https://chat.openai.com/*",
    "https://openai.com/*",
    "https://*.openai.com/*",
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://claude.ai/*",
    "https://*.anthropic.com/*",
    "https://copilot.microsoft.com/*",
    "https://*.bing.com/*",
    "https://*.microsoft.com/*",
    "https://www.meta.ai/*",
    "https://meta.ai/*",
    "https://*.meta.ai/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*",
    "https://you.com/*",
    "https://*.you.com/*",
    "https://poe.com/*",
    "https://*.poe.com/*",
    "https://chat.lmsys.org/*",
    "https://*.cohere.com/*",
    "https://cohere.com/*",
    "https://huggingface.co/chat/*",
    "https://*.huggingface.co/*",
    "https://chat.mistral.ai/*",
    "https://*.mistral.ai/*",
    "https://groq.com/*",
    "https://*.groq.com/*",
    "https://together.ai/*",
    "https://*.together.ai/*",
    "https://replicate.com/*",
    "https://*.replicate.com/*",
    "https://cloud.google.com/vertex-ai/*",
    "https://aws.amazon.com/bedrock/*",
    "https://console.aws.amazon.com/bedrock/*",
    "https://ai.google/*",
    "https://ai.meta.com/*",
    "https://x.ai/*",
    "https://*.x.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.deepseek.com/*",
        "https://chat.deepseek.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://www.chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://openai.com/*",
        "https://*.openai.com/*",
        "https://gemini.google.com/*",
        "https://*.google.com/*",
        "https://claude.ai/*",
        "https://*.anthropic.com/*",
        "https://copilot.microsoft.com/*",
        "https://*.bing.com/*",
        "https://*.microsoft.com/*",
        "https://www.meta.ai/*",
        "https://meta.ai/*",
        "https://*.meta.ai/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*",
        "https://you.com/*",
        "https://*.you.com/*",
        "https://poe.com/*",
        "https://*.poe.com/*",
        "https://chat.lmsys.org/*",
        "https://*.cohere.com/*",
        "https://cohere.com/*",
        "https://huggingface.co/chat/*",
        "https://*.huggingface.co/*",
        "https://chat.mistral.ai/*",
        "https://*.mistral.ai/*",
        "https://groq.com/*",
        "https://*.groq.com/*",
        "https://together.ai/*",
        "https://*.together.ai/*",
        "https://replicate.com/*",
        "https://*.replicate.com/*",
        "https://cloud.google.com/vertex-ai/*",
        "https://aws.amazon.com/bedrock/*",
        "https://console.aws.amazon.com/bedrock/*",
        "https://ai.google/*",
        "https://ai.meta.com/*",
        "https://x.ai/*",
        "https://*.x.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrivacyAIShield"
  },
  "icons": {
    "48": "icon48.png"
  }
}